{{!-- Equipment Code --}}

<br><br>
<div class="card text-center">
  <div class="card-header">
   <h3>What's in your backpack, {{name}}</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title">Inventory</h5>
    <form class="form new-equipment-form">
        <input type="hidden" value="{{id}}" name="character-id" id="character-id">
        <div class="form-group">
          <!--label for="equipment-desc">Add New Equipment:</label-->
          <br>
          <textarea class="form-input" placeholder="Add new equipment" id="equipment-desc" name="equipment-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Add to bag!</button>
        </div>
      </form>
    
  </div>
  <div class="card-footer text-muted">
   <h4>Current Inventory</h4> 
  </div>
 

    <div class="equipment-list">
      {{#each equipment}}
        
          <P>{{item}}</p> 
         <button type ="submit" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
    {{ else }}

        <p>No current inventory</p>
        
      {{/each}}

    </div>
</div>

