<h3>What's in your backpack, {{name}}</h3>


<div>
    <div>

      <h3>Add an item:</h3>

      <form class="form new-equipment-form">
        <input type="hidden" value="{{id}}" name="character-id" id="character-id">
        <div class="form-group">
          <label for="equipment-desc">equipment:</label>
          <textarea class="form-input" id="equipment-desc" name="equipment-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>


    
    <h3>Current Inventory:</h3>

    <div class="equipment-list">
      {{#each equipment}}
        
          <P>{{item}}</p> 
         <button type ="submit" class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
    {{ else }}

        <p>No current inventory</p>
        
      {{/each}}

    </div>
  </div>
</div>


